{
    "name": "unimobiliare",
    "version": "0.1.0",
    "private": true,
    "description": "Platforma de Unificare Imobiliară din România",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "dev:api": "npm run dev --workspace=apps/api",
        "dev:web": "npm run dev --workspace=apps/web",
        "dev:admin": "npm run dev --workspace=apps/admin",
        "build:api": "npm run build --workspace=apps/api",
        "build:web": "npm run build --workspace=apps/web",
        "build:admin": "npm run build --workspace=apps/admin",
        "build:all": "npm run build --workspaces",
        "lint": "npm run lint --workspaces --if-present",
        "test": "npm run test --workspaces --if-present",
        "db:generate": "npm run generate --workspace=packages/database",
        "db:migrate": "npm run migrate --workspace=packages/database",
        "db:seed": "npm run seed --workspace=packages/database"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "author": "Vlad Valeanu",
    "license": "UNLICENSED"
}